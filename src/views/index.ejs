<body>
    <div class="container" id="main">
        <div id="header">
            <h1 class="heading"><strong>97% Organic Horoscope Generation</strong></h1>
            <h3 class="heading"><strong>For the Avid Stars-Knowing Believer</strong></h3>
        </div>
        <div class="container" id="input">
            <button class="btn btn-lg btn-danger" id="showButton">Show/Hide Form</button>
            <form id="HoroscopeForm" onsubmit="processHoroscopeForm()">
              <div class="form-group">
                <input type="text" class="form-control showToggle" id="userName" name="name" placeholder="Name?">
                <input type="text" class="form-control showToggle" id="hometown" name="hometown" placeholder="Hometown?">
                <input type="date" class="form-control showToggle" id="birthday" name="birthday" placeholder="Birthday?">
              </div>
              <input type="submit" value="SUBMIT">
            </form>
            <button class="btn btn-lg btn-danger" id="generate">Generate Sentence!</button>
        </div>        
<!--         <button id="popupButton" class="btn btn-lg btn-danger" onclick="div_show()">Enter Your Personal Info</button>
 -->    <div id="content-box">  
            <h3 class="heading" id="content"><strong></strong></h3>
        </div>
        <div class="container" id="leaderboard">
            <ul>
                <% allHoroscopes.forEach(function(horoscope){ %>
                    <li>
                        <img class="list-icon" src="<%= horoscope.image %>">
                        <h4 class="list-text"><%= horoscope.author %> from <%= horoscope.hometown %> got "<%= horoscope.text %>"</h4>
                    </li>
                    <hr>
                <% }); %>
            </ul>
        </div>
    </div>

